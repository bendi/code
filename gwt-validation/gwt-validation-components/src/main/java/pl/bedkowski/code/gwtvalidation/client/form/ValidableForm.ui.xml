<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>
	<g:FlowPanel>
		<g:FlowPanel ui:field="headerPanel" />
		<g:FlowPanel ui:field="mainPanel" styleName="{style.panel}" />
		<g:FlowPanel ui:field="footerPanel">
			<g:HorizontalPanel>
				<g:Button ui:field='btnCancel' text="Cancel" styleName="submit" />
				<g:Button ui:field="btnSave" text="Save" styleName="submit" />
			</g:HorizontalPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>